<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>
<p>Book detail</p>
<div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
    <div class="col-lg-3 col-md-3">
      <table>
      <tr>
      <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      </th>
      </tr>
      <tr>
      <th>name</th>
      <td><%= @user.name %></td>
      </tr>  <tr>
      <th>introduction</th>
      <td><%= @user.introduction %></td>
      </tr>
      <tr>  </tr>
      </table>
      <i class="fas fa-user-cog"></i>
      <%= link_to "編集", edit_user_path(@user) %>
      <hr>
      <%= form_with url: books_path, model: @newBook, local:true do |f| %>

      <h3>New book</h3>

      <h4>タイトル</h4>
      <%= f.text_field :title %>
      <h4>感想</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class="col-lg-7 col-md-8 offset-md-1">  <!-- この行を追加 -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Book Detail</th>
          <th></th>
          <th></th>
          <th colspan="3"></th>
          </tr>
      </thead>
      
      <tbody>
        <tr>
          <td><%= link_to @user.name, user_path(@book.user_id) %><%= link_to attachment_image_tag(@book,:book_image, :fill, 60, 60, fallback: "no_image.jpg"), user_path(@book.user_id)%></td>
          <td><%= link_to @book.title,book_path(@book) %></td>
          <td><%= @book.body %></td>
          <td></td>

          <% if @book.user_id == current_user.id.to_s then %>
            <td><%= link_to "Edit"  ,edit_book_path(@book.id)%></td>
            <td><%= link_to "Destroy" ,book_path(@book.id), :method => :delete%></td>
          <% else %>

          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
</div>