<h1>Book#edit</h1>
<p>Find me in app/views/books/edit.html.erb</p>
<h2>Editing Book</h2>
<div class="container">  <!-- この行を追加 -->
  <div class="row">   
    <%= form_with model:@book, local:true do |f| %>
    <div class="col-lg-12">
    <label for="inputName">Name</label>
    <%= f.text_field :title, autofocus: true, id:"title", placeholder:"title"%>
    </div>
    <div class="col-lg-12">

    <label for="introduction">感想</label>
    <%= f.text_field :body, autofocus: true, id:"body", placeholder:"感想"%>
    </div>
    <div class="col-lg-12">
    <label for="inputImage">ProfileImage</label>
    <%= attachment_image_tag @book, :book_image, :fill, 60, 60, fallback: "no_image.jpg"%>
    </div>
    <div class="col-lg-12">
    
    <%= f.attachment_field :book_image, placeholder: "プロフィール画像" %>  
    <%= f.submit "Update Book" %>
    </div>
    <% end %>
    <div class="col-lg-12">

    <%= link_to 'Show', book_path(@book) %>
    <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>