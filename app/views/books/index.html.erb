<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>
<p>image</p>
<div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
    <div class="col-lg-3 col-md-3">
      <table>
      <tr>
      <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      </th>
      </tr>
      <tr>
      <th>name</th>
      <td><%= @user.name %></td>
      </tr>  <tr>
      <th>introduction</th>
      <td><%= @user.introduction %></td>
      </tr>
      <tr>  </tr>
      </table>
      <i class="fas fa-user-cog"></i>
      <%= link_to "編集", edit_user_path(@user) %>
      <hr>

      <%= form_with url: books_path, model: @book, local:true do |f| %>

      <h3>New book</h3>

      <h4>タイトル</h4>
      <%= f.text_field :title %>
      <h4>感想</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class="col-lg-8 col-md-8 offset-md-1">  <!-- この行を追加 -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
          </tr>
      </thead>
      
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to attachment_image_tag(book, :book_image, :fill, 60, 60, fallback: "no_image.jpg"),user_path(book.user_id)%></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>