<!DOCTYPE html>
<html>
  <head>
    <title>Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/a46c6f0a0d.js" crossorigin="anonymous"></script>
  </head>

  <body>

    <header class="shadow-sm">
      <%= link_to "Bookers", root_path, class: 'nav-link text-dark' %>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
            <i class="fas fa-home"></i>
            <%= link_to "Home", user_path(current_user), class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <i class="fas fa-users"></i>
              <%=  link_to "users", users_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <i class="fas fa-book-open"></i>
              <%= link_to "books", books_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <i class="fas fa-sign-out-alt"></i>
              <%= link_to "logout", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>
            <% else %>
            <li>
            <i class="fas fa-home"></i>
            <%= link_to "Home", root_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <i class="fas fa-link"></i>
              <%=  link_to "About","/home/about", class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <i class="fas fa-user-plus"></i>
              <%= link_to "sign up", new_user_registration_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <i class="fas fa-sign-in-alt"></i>
              <%= link_to "login", new_user_session_path, class: 'nav-link text-dark' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= render 'layouts/error' %>
    <%= render 'layouts/notifications' %>

    <%= yield %>

  </body>
</html>
