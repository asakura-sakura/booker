<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
    <div class="col-lg-3 col-md-3">
      <table>
      <tr>
      <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      </th>
      </tr>
      <tr>
      <th>name</th>
      <td><%= @user.name %></td>
      </tr>  <tr>
      <th>introduction</th>
      <td><%= @user.introduction %></td>
      </tr>
      </table>
      <i class="fas fa-user-cog"></i>
      <%= link_to "編集", edit_user_path(@user) %>
      <hr>
      <%= form_with url: books_path, model: @book, local:true do |f| %>
      <h3>New book</h3>
      <h4>タイトル</h4>
      <%= f.text_field :title %>
      <h4>感想</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class="col-lg-7 col-md-8 offset-md-1">  <!-- この行を追加 -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th>Author</th>
          <th colspan="3"></th>
          </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to attachment_image_tag(user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"), user_path(user)%></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    </div>
  </div>
</div>