<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>
<h2>プロフィール編集</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container">  <!-- この行を追加 -->
  <div class="row">   
    <div class="col-lg-12">
    <%= form_with model:@user, local:true do |f| %>
    　<div class="col-lg-12">
      <label for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div class="col-lg-12">
      <label for="inputImage">ProfileImage</label>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>  
      </div>
      <div class="col-lg-12">
      <label for="introduction">Introduction</label>
      <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%>
      </div>
      <div class="col-lg-12">
      <%= f.submit "Update User" %>
      </div>
    <% end %>
    </div>
  </div>
</div>