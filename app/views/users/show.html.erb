<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>
<p>Book detail</p>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
    <div class="col-lg-3 col-md-3">
      <table>
      <tr>
      <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      </th>
      </tr>
      <tr>
      <th>name</th>
      <td><%= @user.name %></td>
      </tr>  <tr>
      <th>introduction</th>
      <td><%= @user.introduction %></td>
      </tr>
      <tr>  </tr>
      </table>
      <i class="fas fa-user-cog"></i>
      <%= link_to "編集", edit_user_path(@user) %>
      <hr>
      <%= form_with url: books_path, model: @book, local:true do |f| %>
      <h3>New book</h3>
      <h4>タイトル</h4>
      <%= f.text_field :title %>
      <h4>感想</h4>

      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class="col-lg-7 col-md-8 offset-md-1">  <!-- この行を追加 -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
          </tr>
      </thead>
      
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to attachment_image_tag(book, :book_image, :fill, 60, 60, fallback: "no_image.jpg"), user_path(@user)%></td>
          <td><%= link_to book.title,book_path(book) %></td>
          <td><%= book.body %></td>
          
          <% if book.user_id == current_user.id.to_s then %>
            <td><%= link_to 'Show', book %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
          <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>